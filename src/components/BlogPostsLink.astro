---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'
import NoContents from './NoContents.astro'

export interface Props {
  heading?: string
  posts: Post[]
}

const { heading, posts } = Astro.props
---

<div class="blog-posts-link section">
  {heading && <h3>{heading}</h3>}
  {
    posts.length === 0 ? (
      <NoContents contents={posts} />
    ) : (
      <ul>
        {posts.map((post: Post) => (
          <li>
            <a
              href={getPostLink(post.Slug)}
              title={post.Title}
            >
              {post.Icon && post.Icon.Type === 'emoji' ? (
                <span class="post-icon emoji">{post.Icon.Emoji}</span>
              ) : post.Icon && post.Icon.Type === 'external' ? (
                <img src={post.Icon.Url} class="post-icon" alt="" />
              ) : (
                <span class="post-icon default">📄</span>
              )}
              <span class="post-title">{post.Title}</span>
            </a>
          </li>
        ))}
      </ul>
    )
  }
</div>

<style>
  .blog-posts-link {
    /* Layout.astroの.sectionスタイルを継承 */
  }

  /* 最新記事タイトルに下線を追加（Aboutと同じデザイン） */
  .blog-posts-link h3 {
    color: #1e293b;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 2px solid #e2e8f0;
  }

  /* リストスタイルを完全に削除 */
  .blog-posts-link ul {
    list-style: none !important;
    list-style-type: none !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  .blog-posts-link ul li {
    list-style: none !important;
    list-style-type: none !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  .blog-posts-link ul li::before {
    content: none !important;
    display: none !important;
  }

  /* アイコンのスタイル */
  .post-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    font-size: 14px;
    flex-shrink: 0;
    margin-right: 12px;
    margin-top: 2px;
  }
  
  .post-icon.emoji {
    font-size: 16px;
  }
  
  .post-icon.default {
    opacity: 0.6;
    font-size: 14px;
  }

  /* タイトルの表示改善 */
  .post-title {
    flex: 1;
    min-width: 0;
    line-height: 1.4;
    word-break: break-word;
    hyphens: auto;
    
    /* デスクトップ: 2行まで表示 */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    max-height: 2.8em; /* line-height * 2 */
  }
  
  /* 既存のCSSを上書き */
  .blog-posts-link ul li a {
    display: flex !important;
    align-items: flex-start !important;
    padding: 12px 16px !important;
    color: #475569 !important;
    text-decoration: none !important;
    border-radius: 12px !important;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1) !important;
    font-size: 0.9rem !important;
    font-weight: 500 !important;
    position: relative !important;
    overflow: hidden !important;
    min-height: 44px !important;
    line-height: 1.4 !important;
    white-space: normal !important;
    text-overflow: unset !important;
  }

  /* ホバーエフェクト */
  .blog-posts-link ul li a::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(59, 130, 246, 0.08) 0%, 
      rgba(139, 92, 246, 0.08) 100%);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .blog-posts-link ul li a:hover {
    color: #3b82f6 !important;
    background: rgba(59, 130, 246, 0.04) !important;
    transform: translateX(4px) !important;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15) !important;
  }
  
  .blog-posts-link ul li a:hover::before {
    opacity: 1;
  }

  /* レスポンシブ対応 */
  @media (max-width: 1024px) {
    .post-title {
      -webkit-line-clamp: 1;
      max-height: 1.4em;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      display: block;
    }
  }
  
  @media (max-width: 768px) {
    .post-title {
      max-width: 180px;
    }
    
    .blog-posts-link ul li a {
      padding: 10px 12px !important;
    }
  }
  
  @media (max-width: 480px) {
    .post-title {
      max-width: 140px;
    }
    
    .post-icon {
      width: 18px;
      height: 18px;
      font-size: 12px;
      margin-right: 10px;
    }
    
    .post-icon.emoji {
      font-size: 14px;
    }
  }
</style>