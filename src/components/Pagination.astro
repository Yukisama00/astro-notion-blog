---
import { getPageLink } from '../lib/blog-helpers.ts'

export interface Props {
  currentPage: number
  numberOfPages: number
  tag: string
}

const { currentPage, numberOfPages, tag = '' } = Astro.props

const isFirstPage = currentPage === 1
const isLastPage = currentPage === numberOfPages

const startPage = currentPage - 2 < 1 ? 1 : currentPage - 2
const endPage =
  currentPage + 2 > numberOfPages ? numberOfPages : currentPage + 2

let pages = []
for (let i = startPage; i <= endPage; i++) {
  pages.push(i)
}
---

<div class="pagination">
  <a href={getPageLink(1, tag)} class={`pagination-btn no-style ${isFirstPage ? 'inactive' : ''}`}>
    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
      <path d="M18.41 16.59L13.82 12l4.59-4.59L17 6l-6 6 6 6 1.41-1.41zM6 6h2v12H6V6z"/>
    </svg>
  </a>
  {
    pages.map((p: number) => (
  <a href={getPageLink(p, tag)} class={`pagination-btn no-style ${p === currentPage ? 'active' : ''}`}>
        {p}
      </a>
    ))
  }
  <a href={getPageLink(numberOfPages, tag)} class={`pagination-btn no-style ${isLastPage ? 'inactive' : ''}`}>
    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
      <path d="M5.59 7.41L10.18 12l-4.59 4.59L7 18l6-6-6-6L5.59 7.41zM16 6h2v12h-2V6z"/>
    </svg>
  </a>
</div>

<style>
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin: 48px 0 32px;
    padding: 0;
  }

  .pagination-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
    height: 44px;
    padding: 0 12px;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 12px;
    color: #1e293b;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.4);
    position: relative;
    overflow: hidden;
  }

  /* シマーエフェクト */
  .pagination-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.5s ease;
  }

  /* ホバーエフェクト */
  .pagination-btn:not(.inactive):not(.active):hover {
    transform: translateY(-3px) scale(1.02);
    background: rgba(255,255,255,0.4);
    border-color: rgba(59,130,246,0.5);
    box-shadow: 0 12px 40px rgba(59,130,246,0.2), inset 0 1px 0 rgba(255,255,255,0.6);
    color: #3b82f6;
  }
  .pagination-btn:not(.inactive):not(.active):hover::before {
    left: 100%;
  }

  /* アクティブページ（現在のページ） */
  .pagination-btn.active {
    background: rgba(59,130,246,0.9);
    color: white;
    border-color: rgba(59,130,246,0.8);
    box-shadow: 0 8px 32px rgba(59,130,246,0.3), inset 0 1px 0 rgba(255,255,255,0.3);
    font-weight: 700;
    cursor: default;
  }

  /* 無効なボタン（最初/最後のページで表示される矢印） */
  .pagination-btn.inactive {
    background: rgba(233,236,239,0.7);
    border-color: rgba(148,163,184,0.1);
    color: #cbd5e1;
    cursor: not-allowed;
    box-shadow: none;
  }

  .pagination-btn.inactive:hover {
    transform: none;
    background: rgba(233,236,239,0.7);
    border-color: rgba(148,163,184,0.1);
    color: #cbd5e1;
    box-shadow: none;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .pagination {
      gap: 4px;
      margin: 32px 0 24px;
    }
    .pagination-btn {
      min-width: 40px;
      height: 40px;
      padding: 0 10px;
      font-size: 0.85rem;
      border-radius: 10px;
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
    }
  }

  @media (max-width: 480px) {
    .pagination {
      gap: 2px;
    }
    .pagination-btn {
      min-width: 36px;
      height: 36px;
      padding: 0 8px;
      font-size: 0.8rem;
      border-radius: 8px;
    }
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .pagination {
      gap: 4px;
      margin: 32px 0 24px;
    }
    
    .pagination-btn {
      min-width: 40px;
      height: 40px;
      padding: 0 8px;
      font-size: 0.8rem;
      border-radius: 10px;
    }
  }

  @media (max-width: 480px) {
    .pagination {
      gap: 2px;
    }
    
    .pagination-btn {
      min-width: 36px;
      height: 36px;
      padding: 0 6px;
      font-size: 0.75rem;
      border-radius: 8px;
    }
  }
</style>