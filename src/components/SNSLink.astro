---
export interface Props {
  heading: string
  links: Array<{ href: string; src: string; alt: string }>
}

const { heading, links } = Astro.props
---

<div class="sns-links">
  <h3>{heading}</h3>
  <div class="sns-icons">
    {links.map((link) => (
      <a href={link.href} target="_blank" rel="noopener noreferrer">
        <img src={link.src} alt={link.alt} />
      </a>
    ))}
  </div>
</div>

<style>
.sns-links {
}

.sns-links h3 {
  margin: 0;
  padding-left: 0.4rem;
  color: #777;
  font-size: 0.95rem;
}

.sns-icons {
  display: flex;
  gap: 8px; /* Layout.astroの.author-linksと同じに */
  justify-content: center;
  align-items: center;
}

.sns-icons a {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;   /* Layout.astroの.author-links aと同じ */
  height: 36px;
  background: #fff;
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 8px;
  transition: all 0.2s ease;
  text-decoration: none;
}

.sns-icons a:hover {
  transform: translateY(-1px);
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  border-color: #3b82f6;
}

.sns-icons img {
  width: 20px;
  height: 20px;
  object-fit: contain;
  transition: transform 0.3s ease;
}
</style>