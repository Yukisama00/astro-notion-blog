---
export interface Props {
  heading: string
  links: Array<{ href: string; src: string; alt: string }>
}

const { heading, links } = Astro.props
---

<div class="sns-links">
  <h3>{heading}</h3>
  <div class="sns-icons">
    {links.map((link) => (
      <a href={link.href} target="_blank" rel="noopener noreferrer">
        <img src={link.src} alt={link.alt} />
      </a>
    ))}
  </div>
</div>

<style>
.sns-links {
}

.sns-links h3 {
  margin: 0;
  padding-left: 0.4rem;
  color: #777;
  font-size: 0.95rem;
}

.sns-icons {
  display: flex;
  gap: 10px;
  align-items: center; /* アイコンを中央揃え */
}

.sns-icons a {
    display: flex;
    align-items: center; /* アイコンとリンクを中央揃え */
    justify-content: center;
    width: 40px; /* アイコンのクリック領域を統一 */
    height: 40px;
  }

.sns-icons img {
  width: auto; /* 幅を自動調整 */
  height: 24px; /* 高さを固定 */
  object-fit: contain; /* 比率を維持しながら収める */
  transition: transform 0.3s ease;
}
</style>