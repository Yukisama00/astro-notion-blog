---
import { Post } from '../lib/interfaces.ts'
import { getDateStr } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-date">
  {post.UpdateDate ? <span>LastUpdate : {getDateStr(post.UpdateDate)}</span> : ''}
</div>

<style>
  .post-date {
    margin-block: 0.3rem;
    font-size: 0.9rem;
  }
</style>